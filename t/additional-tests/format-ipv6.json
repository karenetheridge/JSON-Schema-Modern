[
    {
        "description": "validation of IPv6 addresses",
        "schema": {"format": "ipv6"},
        "tests": [
            {
                "description": "no digits is valid",
                "data": "::",
                "valid": true
            },
            {
                "description": "leading colons is valid",
                "data": "::1",
                "valid": true
            },
            {
                "description": "trailing colons is valid",
                "data": "d6::",
                "valid": true
            },
            {
                "description": "two sets of double colons is invalid",
                "data": "1::d6::42",
                "valid": true
            }
        ]
    }
]

